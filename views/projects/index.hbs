<div class="h1">
  <p>Public Projects</p>
</div>
<div class="row">
  {{#each projects}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        {{{editIcon user ../user _id}}}
      </div>
      <div class="card-content center-align">
        <h5>{{name}}</h5>
        <p class="card-text">{{stripTags (truncate body 100)}}</p>
        <br>
        <div class="chip">
          <img src="{{user.image}}" alt="">
          <a href="/projects/user/{{user._id}}">{{user.displayName}}</a>
        </div>
      </div>
      <div class="card-action center-align">
        <a href="/projects/{{_id}}" class="btn grey read-more">Read more</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No projects to display</p>
  {{/each}}
</div>