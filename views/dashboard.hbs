<div class="dashboard">
  <h4>Welcome {{name}}</h4>
  <h6>Find bellow your Projects</h6>
</div>

<div class="content">
  {{#if projects}}
  <table class="striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Link</th>
        <th>Date</th>
        {{!-- <th></th> --}}
      </tr>
    </thead>
    <tbody>
      {{#each projects}}
      <tr>
        <td><a href="/projects/{{_id}}"></a>{{name}}</td>
        <td><span class="dash-status">{{status}}</span></td>
        <td><a href="/projects/{{_id}}"></a>{{link}}</td>
        <td>{{formatDate createdAt 'MMM Do YYYY'}}</td>
        {{!-- <td></td> --}}
      </tr>
      {{/each}}
    </tbody>
  </table>

  {{else}}
  <p>You have not created any projects</p>
  {{/if}}
</div>